# Application Environment
ENVIRONMENT=local
NODE_ENV=local

# Database Configuration
DATABASE_CONNECTION_STRING=postgresql://psqladmin:localpass@localhost:5432/justicetranscribe_db

# Frontend Configuration (Next.js)
# These are exposed to the browser and should not contain sensitive information
# In production, this value comes from Azure Key Vault
NEXT_PUBLIC_API_URL=https://api-justicetranscribe-dev.com

# Sanity (public Learning dataset; read-only)
# These are safe to expose to the browser
NEXT_PUBLIC_SANITY_PROJECT_ID=
NEXT_PUBLIC_SANITY_DATASET=
NEXT_PUBLIC_SANITY_API_VERSION=2023-10-01
NEXT_PUBLIC_SANITY_TUTORIAL_DOCUMENT_ID=

# Authentication (for local development - these are mock values)
AUTH_CLIENT_ID=local-dev-client-id
AUTH_TENANT_ID=local-dev-tenant-id

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

=
# App Service Settings (used in Azure deployment)
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false
WEBSITES_PORT=80

# FastAPI Settings
PYTHONPATH=/app

# Logging
LOG_LEVEL=INFO


PYTHONPATH=.
ENVIRONMENT=local
APP_URL=http://localhost:3000

# Azure Storage Configuration (replaces AWS S3)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name

AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONNECTION_STRING_PROD=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=application-data
AZURE_STORAGE_TRANSCRIPTION_CONTAINER=transcription-processing

# Azure auth:
AZURE_AD_TENANT_ID="dummy"
AZURE_AD_CLIENT_ID="dummy"

# Azure AI Services
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_GROK_API_KEY=
AZURE_GROK_ENDPOINT=
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=

# Monitoring and Observability
SENTRY_DSN=placeholder
LANGFUSE_SECRET_KEY="sk-lf-..."
LANGFUSE_PUBLIC_KEY="pk-lf-..."
LANGFUSE_HOST=""
NEXT_PUBLIC_LANGFUSE_PUBLIC_KEY=
NEXT_PUBLIC_LANGFUSE_HOST=

# PostHog Analytics Configuration
# Remove or leave empty to disable PostHog (recommended for local development)
NEXT_PUBLIC_POSTHOG_API_KEY=phc_your_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# External Services
GOV_NOTIFY_API_KEY=placeholder
GOOGLE_APPLICATION_CREDENTIALS_JSON_OBJECT=

JWT_ENABLE_VERIFICATION=true
JWT_VERIFICATION_STRICT=true

# Onboarding - set to true to force onboarding in dev mode
FORCE_ONBOARDING_DEV=false

# Allowlist bypass for local development - set to true to allow developer@localhost.com to bypass allowlist
BYPASS_ALLOWLIST_DEV=false

ALLOWLIST_CONTAINER=application-data
ALLOWLIST_BLOB_NAME=lookups/allowlist.csv
ALLOWLIST_CACHE_TTL_SECONDS=7200 # (2 hours, will pull allowlist once more once expired)
